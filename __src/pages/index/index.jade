block title
	title Drum Kit

block content
	.keys
		.key(data-key="65")
			kbd a
			span.sound clap
		.key(data-key="83")
			kbd s
			span.sound hihat
		.key(data-key="68")
			kbd d
			span.sound kick
		.key(data-key="70")
			kbd f
			span.sound openhat
		.key(data-key="71")
			kbd g
			span.sound percussion
		.key(data-key="72")
			kbd h
			span.sound ride
		.key(data-key="74")
			kbd j
			span.sound snare
		.key(data-key="75")
			kbd k
			span.sound tom
		.key(data-key="76")
			kbd l
			span.sound crash



	audio(src="sounds/clap.wav" data-key="65")
